    <section class="home-section">
      <div class="dialer-form">
        <h1>Money Charges Calculator</h1>
        <p>
          Welcome to our platform, where you can conveniently calculate the
          charges for any desired amount of money you wish to send to someone
          via MTN.
        </p>
        <form id="calculatorForm" action="#" method="get" class="input-section">
          <label for="amount" class="form-label">Amount (XAF):</label>
          <input type="number" id="amount" name="amount" required />
          <label for="transactionType" class="form-label"
            >Transaction Type:</label
          >
          <select id="transactionType" name="transactionType" required>
            <option value="mtnToMtn">MTN to MTN</option>
            <option value="mtnToNonMtn">MTN to Non-MTN</option>
            <option value="withdrawal">Cash Withdrawal</option>
          </select>
          <button type="submit">Calculate</button>
        </form>
      </div>
      <div id="result"></div>
    </section>
    <script>
      document
        .getElementById("calculatorForm")
        .addEventListener("submit", function (event) {
          event.preventDefault();
          const amount = parseFloat(document.getElementById("amount").value);
          const transactionType =
            document.getElementById("transactionType").value;
          let charges = 0;

          if (transactionType === "mtnToMtn") {
            if (amount >= 100 && amount <= 10050) {
              charges = amount * 0.01;
            } else if (amount >= 10051 && amount <= 13550) {
              charges = 100;
            } else if (amount >= 13551 && amount <= 1000000) {
              charges = 125;
            }
          } else if (transactionType === "mtnToNonMtn") {
            if (amount >= 100 && amount <= 100100) {
              charges = amount * 0.03;
            } else if (amount >= 100101 && amount <= 200500) {
              charges = 3100;
            } else if (amount >= 200501 && amount <= 400500) {
              charges = 3500;
            } else if (amount >= 400501 && amount <= 500000) {
              charges = 4000;
            }
          } else if (transactionType === "withdrawal") {
            if (amount >= 100 && amount <= 5999) {
              charges = amount * 0.03;
            } else if (amount >= 6000 && amount <= 10050) {
              charges = 175;
            } else if (amount >= 10051 && amount <= 13550) {
              charges = 300;
            } else if (amount >= 13551 && amount <= 25050) {
              charges = 350;
            } else if (amount >= 25051 && amount <= 50050) {
              charges = 700;
            } else if (amount >= 50051 && amount <= 75100) {
              charges = 1350;
            } else if (amount >= 75101 && amount <= 100100) {
              charges = 1800;
            } else if (amount >= 100101 && amount <= 200500) {
              charges = 2150;
            } else if (amount >= 200501 && amount <= 300500) {
              charges = 2600;
            } else if (amount >= 300501 && amount <= 400500) {
              charges = 3100;
            } else if (amount >= 400501 && amount <= 500000) {
              charges = 3500;
            }
          }

          const resultElement = document.getElementById("result");
          resultElement.textContent = "Charges: " + charges.toFixed(2) + " XAF";
        });
    </script>
