    <section class="home-section">
      <div class="dialer-form">
        <p>Short Code Generator For All Your MTN Mobile Money Transactions.</p>
        <h2>Enter transfer details</h2>
        <form action="#" method="get" class="input-section">
          <label for="receiver" class="form-label"
            >Receiver phone number:</label
          >
          <input type="tel" name="tel" id="receiver" placeholder="" />
          <label for="merchant" class="form-label">Merchant code:</label>
          <input type="tel" name="merchant" id="merchant" placeholder="" />
          <label for="amount">Amount:</label>
          <input
            type="number"
            required
            name="number"
            id="amount"
            placeholder=""
            step="1"
          />
          <br /><br />
          <button type="submit" id="pay-btn">PAY</button>
          <button type="reset" class="btn-clear">Clear</button>
        </form>
      </div>
